  "bugs": {
    "url": "https://github.com/RoomMateFamily/rm-time-utils/issues"
  },
  "homepage": "https://github.com/RoomMateFamily/rm-time-utils#readme",
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.0.5"
  }
