{
  "name": "rm-time-utils",
  "version": "1.0.0",
  "description": "Time utils for timezone handling and more",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.{ts,js}\"",
